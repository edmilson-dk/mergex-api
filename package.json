{
  "name": "mergex-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:edmilson-dk/mergex-api.git",
  "author": "edmilson-dk <droidvidaboa@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run migrate && rm -rf dist && tsc",
    "migrate": "npx prisma migrate deploy",
    "start": "node dist/main/index.js",
    "dev": "tsc && npx ts-node-dev --respawn --pretty --transpile-only src/main/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "postgit": "npm run format && npm run lint && git push"
  },
  "dependencies": {
    "@prisma/client": "^3.4.2",
    "axios": "^0.24.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.2",
    "module-alias": "^2.2.2",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "prisma": "3.4.1",
    "redis": "^3.1.2",
    "socket.io": "^4.3.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/joi": "^17.2.3",
    "@types/node": "^16.11.6",
    "@types/redis": "^2.8.32",
    "@types/socket.io": "^3.0.2",
    "prettier": "^2.4.1",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.4"
  },
  "_moduleAliases": {
    "@domain": "dist/domain/",
    "@infra": "dist/infra/",
    "@shared": "dist/shared/",
    "@main": "dist/main/",
    "@application": "dist/application/"
  }
}
